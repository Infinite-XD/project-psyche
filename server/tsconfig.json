{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./server/build",
      "rootDir": "./server",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  